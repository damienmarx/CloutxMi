# CloutScape Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================
# Application Configuration
# ============================================
NODE_ENV=development
APP_NAME=CloutScape
APP_VERSION=1.0.0
PORT=3000
HOST=localhost

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=mysql://damien:sheba@localhost:3306/monalisa
DB_MAX_CONNECTIONS=10
DB_CONNECTION_TIMEOUT=10000
DB_ENABLE_LOGGING=false

# ============================================
# Security Configuration
# ============================================
# Generate a strong random secret (min 32 characters)
JWT_SECRET=your-very-long-random-secret-key-min-32-chars
JWT_EXPIRATION=7d

# Generate a strong encryption key (min 32 characters)
ENCRYPTION_KEY=your-encryption-key-for-sensitive-data-32-chars

BCRYPT_ROUNDS=10
SESSION_SECRET=your-session-secret-key

# Cookie Configuration
COOKIE_SECURE=false  # Set to true in production with HTTPS
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=strict

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_MAX_FILES=10
LOG_ENABLE_CONSOLE=true

# ============================================
# Rate Limiting Configuration
# ============================================
RATE_LIMITING_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_KEY_GENERATOR=ip

# ============================================
# Email Configuration
# ============================================
EMAIL_ENABLED=false
EMAIL_PROVIDER=smtp
EMAIL_FROM=noreply@cloutscape.org

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ============================================
# Cryptocurrency Configuration
# ============================================
TRUST_WALLET_ADDRESS=goatgang@trust
CRYPTO_NETWORKS=ethereum,bsc,polygon,arbitrum,bitcoin
INFURA_KEY=your-infura-api-key

# ============================================
# Monitoring & Analytics
# ============================================
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
ENABLE_METRICS=false
METRICS_PORT=9090

# ============================================
# Feature Flags
# ============================================
EMAIL_VERIFICATION_REQUIRED=false
TWO_FACTOR_AUTH_ENABLED=false
MAINTENANCE_MODE=false
BETA_FEATURES=false

# ============================================
# Game Configuration
# ============================================
GAME_MIN_BET=0.01
GAME_MAX_BET=10000
GAME_HOUSE_EDGE=0.02

# ============================================
# VIP Configuration
# ============================================
VIP_ENABLED_TIERS=bronze,silver,gold,platinum,diamond
VIP_CASHBACK_ENABLED=true
VIP_BONUS_MULTIPLIER_ENABLED=true

# ============================================
# OAuth Configuration
# ============================================
VITE_OAUTH_PORTAL_URL=https://your-oauth-provider.com/oauth
VITE_APP_ID=cloutscape-org
VITE_SITE_URL=http://cloutscape.org
OAUTH_SERVER_URL=https://your-oauth-provider.com/oauth

